@model attocaert.Models.tbl_product
@{
    ViewBag.Title = "Adtocart";
       Layout = "~/Views/Shared/_Partial.cshtml";
}
<br />
<br />
<br />
@using (@Html.BeginForm())
{
    


<div class="container">

    <div class="row">

        <div class="col-lg-4 col-md-4 col-sm-4">

            <img  style="min-height:200px; width:200px;" src="@Url.Content(Model.pro_image)"/>


        </div>



        <div class="col-lg-8 col-md-8 col-sm-8">

            <h4><strong>Nombre del Producto:</strong> @Model.pro_name</h4>
            <h4><strong>Precio:</strong> @Model.pro_price RD</h4>
            <h4><strong>Descripcion:</strong> @Model.pro_desc</h4>

            <input type="number"  name="qty" value="0" id="qty" /> 

            <input  type="submit" value="Comprar" class="btn btn-danger" />

        </div>



    </div>


</div>

}