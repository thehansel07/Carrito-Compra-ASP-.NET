
@{
    ViewBag.Title = "checkout";
    Layout = "~/Views/Shared/_Partial.cshtml";
}

<h1 style="text-align:center;background-color:burlywood;margin-top:50px">Mi Carrito de Compras</h1>
<br />  
<body style="background-color:lavenderblush">
</body>

@if (TempData["cart"]!=null)
    {

    
    <table class="table table-bordered">

        <thead >
            <tr >
                <th >ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Cuenta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TempData["cart"] as List<attocaert.Models.cart>)
            {
                
                <tr>
                    <td>@item.productid</td>
                    <td>@item.productname</td>
                    <td>@item.price</td>
                    <td>@item.qty</td>
                    <td>@item.bill</td>

                </tr>
                
            }

        </tbody>

        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td><strong>Total: </strong> @TempData["total"]</td>

            </tr>
        </tfoot>

    </table>
    
    
    
    
    
    }
else
{
       <h2 style="color:red"> El carrito esta vacio ...</h2>
    @Html.ActionLink("Volver", "Index","Home") 
}

